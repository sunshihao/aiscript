<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>
	<form-beans>
	    <!-- 单位概况 -->
        <form-bean name="unitViewForm" type="com.dhc.sams.inf.unitview.web.UnitViewForm"></form-bean>
        <!-- 仪器概况 -->
        <form-bean name="apparatusViewForm" type="com.dhc.sams.inf.apparatusview.web.ApparatusViewForm"></form-bean>
        <!-- 仪器在线状况 -->
        <form-bean name="apparatusViewForm" type="com.dhc.sams.inf.apparatusonline.web.ApparatusOnlineForm"></form-bean>
        <!-- 通知发布 -->
        <form-bean name="noticeIssueForm" type="com.dhc.sams.inf.noticeissue.web.NoticeIssueForm"></form-bean>
        <!-- 仪器信息浏览-->
        <form-bean name="apparatusInfoForm" type="com.dhc.sams.inf.apparatusinfo.web.ApparatusInfoForm"></form-bean>
        <!-- 功能信息浏览-->
        <form-bean name="functionInfoForm" type="com.dhc.sams.inf.functioninfo.web.FunctionInfoForm"></form-bean>
	</form-beans>
	<action-mappings>
	
		<!-- 单位概况 -->
		<action path="/unitViewAction" name="unitViewForm" type="com.dhc.sams.inf.unitview.web.UnitViewAction"
			scope="request" parameter="method">
			<forward name="list" path="/sams/inf/unitview/UnitViewList.jsp"></forward>
		</action>
		<!-- 仪器概况 -->
		<action path="/apparatusViewAction" name="apparatusViewForm" type="com.dhc.sams.inf.apparatusview.web.ApparatusViewAction"
			scope="request" parameter="method">
			<forward name="list" path="/sams/inf/apparatusview/ApparatusViewList.jsp"></forward>
		</action>
		<!-- 仪器在线状况-->
		<action path="/apparatusOnlineAction" name="apparatusOnlineForm" type="com.dhc.sams.inf.apparatusonline.web.ApparatusOnlineAction"
			scope="request" parameter="method">
			<forward name="list" path="/sams/inf/apparatusonline/ApparatusOnlineList.jsp"></forward>
			<forward name="applyInfo" path="/sams/inf/apparatusonline/ApplyInfoList.jsp"></forward>
		</action>
		<!-- 通知发布-->
		<action path="/noticeIssueAction" name="noticeIssueForm" type="com.dhc.sams.inf.noticeissue.web.NoticeIssueAction"
			scope="request" parameter="method">
			<forward name="list" path="/sams/inf/noticeissue/NoticeIssueList.jsp"></forward>
			<forward name="edit" path="/sams/inf/noticeissue/NoticeEdit.jsp"></forward>
			<forward name="view" path="/sams/inf/noticeissue/NoticeView.jsp"></forward>
			<forward name="viewlist" path="/sams/inf/noticeissue/NoticeList.jsp"></forward>
		</action>
		<!-- 仪器信息浏览-->
		<action path="/apparatusInfoAction" name="apparatusInfoForm" type="com.dhc.sams.inf.apparatusinfo.web.ApparatusInfoAction"
			scope="request" parameter="method">
			<forward name="list" path="/sams/inf/apparatusinfo/ApparatusInfo.jsp"></forward>
			<forward name="edit" path="/sams/inf/apparatusinfo/ApparatusInfoEdit.jsp"></forward>
		</action>
		<!-- 功能信息浏览-->
		<action path="/functionInfoAction" name="functionInfoForm" type="com.dhc.sams.inf.functioninfo.web.FunctionInfoAction"
			scope="request" parameter="method">
			<forward name="list" path="/sams/inf/functioninfo/FunctionInfo.jsp"></forward>
		</action>
	</action-mappings>
</struts-config>